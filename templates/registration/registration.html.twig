{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <div class="container mt-5">
        {{ form_start(form) }}
            <div class="row justify-content-center">
                <div class="col-3">
                    {{ form_label(form.email, 'Ваш email:', {'label_attr': {'class': 'foo'}}) }}
                    {{ form_row(form.email) }}
                </div>
            </div>
            <div class="row justify-content-center mb-4">
                <div class="col-3">
                    {{ form_label(form.password, 'Ваш пароль:', {'label_attr': {'class': 'foo'}}) }}
                    {{ form_row(form.password) }}
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-3 ">
                    {{ form_row(form.save, { 'label': 'Зарегистрироваться' }) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}
{% endblock %}
